<%= form_for(@portfolio_item) do |f| %>

  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :subtitle %>
    <%= f.text_area :subtitle %>
  </div>

   <div class="field">
    <%= f.label :body %>
    <%= f.text_area :body %>
  </div>

  <ul>
  <!-- nested forms for technologies -->
  <!-- comes from our tech model that accepts nested attributes -->
    <%= f.fields_for :technologies do |technology_form| %>
      <li>
        <%= technology_form.label :name %>
        <%= technology_form.text_field :name %>
      </li>
    <% end %>
  </ul>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>