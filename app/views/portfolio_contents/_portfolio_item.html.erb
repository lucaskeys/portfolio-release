<div class="card" data-id="<%= portfolio_item.id %>">
<!-- now each item will have an id attribute that we can grab and use in the coffeescript code -->
	<%= image_tag portfolio_item.thumb_image unless portfolio_item.thumb_image.nil? %>
	<p class="card-text"><span><%= link_to portfolio_item.title, portfolio_show_path(portfolio_item) %></span> <%= portfolio_item.subtitle %></p>
</div>

